<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field"
    tools:context="com.umutsoysal.iot.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/layout"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IOT PROJECT"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:textSize="35dp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_marginRight="95dp"
        android:layout_marginLeft="95dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#80000000"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Date"
            android:layout_gravity="center"
            android:textColor="#e6e6e6"
            android:fontFamily="serif"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29 eylül 2017"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:id="@+id/date"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:50"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:id="@+id/day"
            android:layout_marginTop="1dp"
            android:textSize="18dp"
            />

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="95dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#80000000"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nem Değeri"
            android:layout_gravity="center"
            android:textColor="#e6e6e6"
            android:fontFamily="serif"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="942"
            android:id="@+id/field"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toprak ideal nem seviyesinin altinda ve sulanması gerekmektedir."
            android:id="@+id/mesaj"
            android:textColor="#ffffff"
            android:fontFamily="serif"
            android:layout_marginTop="15dp"
            android:textSize="13dp"
            />
        </LinearLayout>


        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:id="@+id/guncelle"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#1586c7"
            android:textColor="#ffffff"
            android:text="Yenile"/>




    </LinearLayout>



</android.support.constraint.ConstraintLayout>
